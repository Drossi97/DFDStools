---
import Layout from '../layouts/Layout.astro';
import Header from '../components/shared/Header.astro';
---

<Layout>
  <Header />
  
  <main class="min-h-screen bg-[#f4f7f9] pt-[67px]">
    <div class="flex flex-col items-center pt-24">
      <div class="w-full max-w-2xl px-4">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <!-- Botón Hoja de Horas -->
          <a href="/hoja-de-horas" class="bg-white border border-gray-300 rounded-lg shadow-sm hover:shadow-md transition-shadow p-6 flex flex-col items-center text-center cursor-pointer">
            <svg class="w-16 h-16 text-[#002B45] mb-4" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <rect x="3" y="4" width="18" height="18" rx="2" ry="2" stroke="currentColor" stroke-width="2"/>
              <line x1="16" y1="2" x2="16" y2="6" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              <line x1="8" y1="2" x2="8" y2="6" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              <line x1="3" y1="10" x2="21" y2="10" stroke="currentColor" stroke-width="2"/>
            </svg>
            <h2 class="text-lg font-semibold text-gray-900 mb-2">Hoja de Horas</h2>
          </a>

          <!-- Botón Cuadrar Sobordos -->
          <a href="/cuadrar-sobordos" class="bg-white border border-gray-300 rounded-lg shadow-sm hover:shadow-md transition-shadow p-6 flex flex-col items-center text-center cursor-pointer">
            <svg class="w-16 h-16 text-[#002B45] mb-4" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M9 11l3 3L22 4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              <path d="M21 12v7a2 2 0 01-2 2H5a2 2 0 01-2-2V5a2 2 0 012-2h11" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            <h2 class="text-lg font-semibold text-gray-900 mb-2">Cuadrar Sobordos</h2>
          </a>

          <!-- Botón Actualizar Tripulantes -->
          <a href="/actualizar-tripulantes" class="bg-white border border-gray-300 rounded-lg shadow-sm hover:shadow-md transition-shadow p-6 flex flex-col items-center text-center cursor-pointer">
            <svg class="w-16 h-16 text-[#002B45] mb-4" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M17 21v-2a4 4 0 00-4-4H5a4 4 0 00-4 4v2" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              <circle cx="9" cy="7" r="4" stroke="currentColor" stroke-width="2"/>
              <path d="M23 21v-2a4 4 0 00-3-3.87M16 3.13a4 4 0 010 7.75" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            <h2 class="text-lg font-semibold text-gray-900 mb-2">Actualizar Tripulantes</h2>
          </a>
        </div>
      </div>
    </div>
  </main>
</Layout>